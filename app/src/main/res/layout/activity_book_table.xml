<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/walkthrough_page1"
    tools:context="com.wma.ozfoodhunter.BookTable">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_book_table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.wma.ozfoodhunter.BookTable">

<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/bookingdetailshead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a82e2c2c"
        android:orientation="vertical">

        <com.wma.ozfoodhunter.fonts.TextView_Medium

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <com.wma.ozfoodhunter.fonts.ED_Regular
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_white_booktable"
            android:padding="3dp"
            android:inputType="date"
            android:drawablePadding="7dp"
            android:drawableRight="@drawable/cal2"
            />
        <com.wma.ozfoodhunter.fonts.TextView_Medium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Time"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <Spinner
            android:padding="3dp"
            android:background="@drawable/rectangle_white_booktable"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/spinner_title"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>

    <com.wma.ozfoodhunter.fonts.TextView_Regular
        android:textSize="16dp"
        android:padding="5dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/bookingdetailshead"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Booking Details"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_anchor="@id/lin1"
        app:layout_anchorGravity="top|start"
        android:background="#f94ba705"
        android:layout_marginBottom="10dp"/>

</android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/bookingdetailshead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a82e2c2c"
            android:orientation="vertical">

            <com.wma.ozfoodhunter.fonts.TextView_Medium

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_white_booktable"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@drawable/n"
                    android:padding="3dp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/editText"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey"
                    android:hint="Your Name"
                    android:singleLine="true"
                    android:textStyle="italic"/>

            </LinearLayout>

           <!-- <com.wma.ozfoodhunter.fonts.ED_Regular
                android:hint="Your Name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_white_booktable"
                android:padding="3dp"
                android:inputType="text"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/cal2"
                />-->

            <com.wma.ozfoodhunter.fonts.TextView_Medium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_white_booktable"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView1"
                    android:src="@drawable/n"
                    android:padding="3dp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/editText1"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey"
                    android:hint="Email Address"
                    android:singleLine="true"
                    android:textStyle="italic"/>

            </LinearLayout>

           <!-- <com.wma.ozfoodhunter.fonts.ED_Regular
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_white_booktable"
                android:padding="3dp"
                android:inputType="text"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/cal2"
                android:id="@+id/ED_Regular2" />-->

            <com.wma.ozfoodhunter.fonts.TextView_Medium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_white_booktable"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:src="@drawable/n"
                    android:padding="3dp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/editText2"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/grey"
                    android:hint="0123456789"
                    android:textStyle="italic"/>

            </LinearLayout>
          <!--  <com.wma.ozfoodhunter.fonts.ED_Regular
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_white_booktable"
                android:padding="3dp"
                android:inputType="number"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/cal2"
                />-->

            <com.wma.ozfoodhunter.fonts.TextView_Medium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number Of Person"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/textView_Medium" />
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_white_booktable"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:src="@drawable/n"
                    android:padding="3dp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText3"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey"
                    android:inputType="number"
                    android:singleLine="true"
                    android:hint="Number Of Person"
                    android:textStyle="italic"/>

            </LinearLayout>

            <!--<com.wma.ozfoodhunter.fonts.ED_Regular
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_white_booktable"
                android:padding="3dp"
                android:inputType="number"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/cal2"
                android:id="@+id/ED_Regular" />-->

            <com.wma.ozfoodhunter.fonts.TextView_Medium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Special Request"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rectangle_white_booktable"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:padding="3dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView4"
                    android:src="@drawable/n"
                    android:padding="3dp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText4"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:inputType="text"
                    android:maxLines="4"
                    android:textColor="@color/grey"
                    android:hint="Expressing Your Feelings"
                    android:textStyle="italic"/>

            </LinearLayout>
           <!-- <com.wma.ozfoodhunter.fonts.ED_Regular
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_white_booktable"
                android:padding="3dp"
                android:inputType="text"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/cal2"
                />-->


        </LinearLayout>
        <com.wma.ozfoodhunter.fonts.TextView_Regular
            android:textSize="16dp"
            android:padding="5dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/guestdetailshead"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Guest Details"
            android:textColor="@color/white"
            android:textAlignment="center"
            app:layout_anchor="@id/lin2"
            app:layout_anchorGravity="top|start"
            android:background="#f94ba705"
            android:layout_marginBottom="10dp"/>

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:layout_marginBottom="20dp">
        <com.wma.ozfoodhunter.fonts.BT_Regular
            android:text="submit"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_weight=".4"
            android:layout_width="0dp"
            android:background="@drawable/rectangle_blue"
            android:layout_height="30dp" />
        <com.wma.ozfoodhunter.fonts.TextView_Regular

            android:layout_weight=".05"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <com.wma.ozfoodhunter.fonts.BT_Regular
            android:text="Cancel"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_weight=".4"
            android:layout_width="0dp"
            android:background="@drawable/rectangle_red"
            android:layout_height="30dp" />

    </LinearLayout>

</LinearLayout>
</ScrollView>