<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="500dp"
    android:minWidth="300dp"
    android:background="@drawable/rectangle"
    >


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate this Restaurant"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="italic"
        android:textColor="@color/violet"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Rating"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="#837b7b" />
    <RatingBar
        android:clickable="true"
        android:numStars="5"
        android:stepSize="0.8"
        android:rating="2.0"
        style="?android:attr/ratingBarStyle"
        android:layout_gravity="center"
        android:id="@+id/rating_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Value Rating"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="#837b7b" />

    <RatingBar
        android:clickable="true"
        android:numStars="5"
        android:stepSize="0.8"
        android:rating="2.0"
        android:layout_gravity="center_horizontal"
        android:id="@+id/rating_value"
        style="?android:attr/ratingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speed Rating"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="#837b7b" />

    <RatingBar
        android:clickable="true"
        android:numStars="5"
        android:stepSize="0.8"
        android:rating="2.0"
        android:layout_gravity="center_horizontal"
        android:id="@+id/rating_speed"
        style="?android:attr/ratingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginTop="30dp"
        android:padding="8dp"
        android:gravity="start"
        android:hint="Write a short review"
        android:id="@+id/comment"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rectangle_edge_black"/>

    <Button
        android:layout_marginTop="25dp"
        android:padding="8dp"
        android:id="@+id/feedback"
        android:text="Submit"
        android:textColor="@color/white"
        android:background="@drawable/rectangle_edge"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"/>


</LinearLayout>