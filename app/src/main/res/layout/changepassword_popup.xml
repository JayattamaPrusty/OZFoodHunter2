<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#14000000"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#14000000"
        >

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:background="#06f4eeee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.wma.ozfoodhunter.fonts.TextView_Regular
                    android:background="@drawable/circle_red_popup"
                    android:id="@+id/bookingdetailshead"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    />
            </RelativeLayout>
            <com.wma.ozfoodhunter.fonts.TextView_Bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="info"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textAlignment="center"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <com.wma.ozfoodhunter.fonts.TextView_Regular

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <com.wma.ozfoodhunter.fonts.ED_Regular
                android:id="@+id/oldpw"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:singleLine="true"
                android:hint="Old password"
                android:background="@drawable/rectangle_edge_red"
                android:padding="5dp"/>
            <com.wma.ozfoodhunter.fonts.ED_Regular
                android:id="@+id/newpw"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:singleLine="true"
                android:hint="New password"
                android:background="@drawable/rectangle_edge_red"
                android:padding="5dp"/>
            <com.wma.ozfoodhunter.fonts.ED_Regular
                android:id="@+id/confirmpw"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:singleLine="true"
                android:hint="Confirm password"
                android:background="@drawable/rectangle_edge_red"
                android:padding="5dp"/>
            <com.wma.ozfoodhunter.fonts.BT_Regular
                android:id="@+id/change"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimary"
                android:text="Change"
                android:gravity="center"
                android:textColor="@color/white"
                />
            <com.wma.ozfoodhunter.fonts.BT_Regular
                android:id="@+id/dismiss"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimary"
                android:text="Dismiss"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="30dp"
                />
        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>